<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/normal_article_layout_wrapper"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageView_normal_article"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Technology"
        android:id="@+id/textView_normal_article_type"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView_normal_article"
        android:layout_toEndOf="@+id/imageView_normal_article"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorPrimary"
        android:singleLine="true"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="This is title"
        android:id="@+id/textView_normal_article_title"
        android:layout_below="@+id/textView_normal_article_type"
        android:layout_toRightOf="@+id/imageView_normal_article"
        android:layout_toEndOf="@+id/imageView_normal_article"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="publish date"
        android:id="@+id/textView_normal_article_publishdate"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:singleLine="true" />
</RelativeLayout>